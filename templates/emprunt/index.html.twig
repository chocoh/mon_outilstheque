{% extends 'base.html.twig' %}

{% block title %}Emprunt index{% endblock %}

{% block body %}
    <h1>Emprunt index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Avis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.dateDebut ? emprunt.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ emprunt.dateFin ? emprunt.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ emprunt.avis }}</td>
                <td>
                    <a href="{{ path('emprunt_show', {'id': emprunt.id}) }}">show</a>
                    <a href="{{ path('emprunt_edit', {'id': emprunt.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('emprunt_new') }}">Create new</a>
{% endblock %}
